    <div id="root" class="h-full"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;
        const { jsPDF } = window.jspdf;

        // --- ICON COMPONENTS ---
        const IconBase = ({ children, size = 18, className = "" }) => (
            <svg xmlns="http://www.w3.org/2000/svg" width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}>
                {children}
            </svg>
        );

        const Icons = {
            Camera: (props) => <IconBase {...props}><path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"/><circle cx="12" cy="13" r="3"/></IconBase>,
            Plus: (props) => <IconBase {...props}><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></IconBase>,
            Trash2: (props) => <IconBase {...props}><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></IconBase>,
            Download: (props) => <IconBase {...props}><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></IconBase>,
            FileSpreadsheet: (props) => <IconBase {...props}><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><path d="M8 13h2"/><path d="M8 17h2"/><path d="M14 13h2"/><path d="M14 17h2"/></IconBase>,
            Users: (props) => <IconBase {...props}><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></IconBase>,
            X: (props) => <IconBase {...props}><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></IconBase>,
            Check: (props) => <IconBase {...props}><polyline points="20 6 9 17 4 12"/></IconBase>,
            Settings: (props) => <IconBase {...props}><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></IconBase>,
            Move: (props) => <IconBase {...props}><polyline points="5 9 2 12 5 15"/><polyline points="9 5 12 2 15 5"/><polyline points="19 9 22 12 19 15"/><polyline points="9 19 12 22 15 19"/><line x1="2" y1="12" x2="22" y2="12"/><line x1="12" y1="2" x2="12" y2="22"/></IconBase>,
            Menu: (props) => <IconBase {...props}><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></IconBase>,
            List: (props) => <IconBase {...props}><line x1="8" y1="6" x2="21" y2="6"/><line x1="8" y1="12" x2="21" y2="12"/><line x1="8" y1="18" x2="21" y2="18"/><line x1="3" y1="6" x2="3.01" y2="6"/><line x1="3" y1="12" x2="3.01" y2="12"/><line x1="3" y1="18" x2="3.01" y2="18"/></IconBase>,
            Grid: (props) => <IconBase {...props}><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></IconBase>
        };

        const Button = ({ children, onClick, variant = 'primary', className = '', icon: Icon, disabled }) => {
            const baseStyle = "flex items-center justify-center px-3 py-2 sm:px-4 sm:py-2 rounded-lg font-medium transition-all duration-200 active:scale-95 shadow-sm disabled:opacity-50 disabled:cursor-not-allowed text-sm sm:text-base whitespace-nowrap";
            const variants = {
                primary: "bg-blue-600 text-white hover:bg-blue-700",
                secondary: "bg-white text-gray-700 border border-gray-200 hover:bg-gray-50",
                danger: "bg-red-50 text-red-600 hover:bg-red-100 border border-red-100",
            };
            return (
                <button type="button" onClick={onClick} disabled={disabled} className={`${baseStyle} ${variants[variant]} ${className}`}>
                    {Icon && <Icon size={18} className="mr-2" />}
                    {children}
                </button>
            );
        };

        // --- COMPONENTS ---

        const EmployeeCard = ({ employee, onClick, onDragStart, onMoveInit, className = "", isStaging = false, isSelected = false }) => (
            <div 
                draggable="true"
                onDragStart={(e) => onDragStart && onDragStart(e, employee.id)}
                className={`relative flex flex-col items-center p-3 rounded-xl border-b-4 shadow-sm w-36 sm:w-40 transition-transform duration-200 cursor-pointer bg-white ${className} ${isSelected ? 'ring-4 ring-blue-400 scale-105 z-20' : 'hover:scale-105'}`}
                onClick={(e) => { e.stopPropagation(); onClick(employee); }}
            >
                <div className="relative">
                    <img 
                        src={employee.image || "https://via.placeholder.com/100?text=No+Img"} 
                        alt={employee.name}
                        className="w-14 h-14 sm:w-16 sm:h-16 rounded-full object-cover border-2 border-white shadow-sm bg-gray-200 pointer-events-none"
                    />
                    <div className="absolute -bottom-1 -right-1 bg-white rounded-full p-1 shadow">
                        <div className={`w-3 h-3 rounded-full ${employee.status === 'Active' ? 'bg-green-500' : 'bg-red-500'}`}></div>
                    </div>
                </div>
                
                <div className="mt-2 text-center w-full">
                    <p className="text-[10px] sm:text-xs font-bold text-gray-500">{employee.id}</p>
                    <h3 className="text-xs sm:text-sm font-bold text-gray-800 leading-tight truncate w-full">{employee.name}</h3>
                    <p className="text-[10px] sm:text-xs text-gray-600 truncate w-full">{employee.position}</p>
                </div>
                
                {/* ปุ่มย้าย (Move) สำหรับมือถือ */}
                {isStaging && (
                    <button 
                        onClick={(e) => { e.stopPropagation(); onMoveInit(employee); }}
                        className={`absolute top-1 right-1 p-1.5 rounded-full ${isSelected ? 'bg-blue-600 text-white' : 'text-gray-400 hover:text-blue-600 hover:bg-blue-50'}`}
                    >
                        <Icons.Move size={14} />
                    </button>
                )}
            </div>
        );

        const EmployeeNode = ({ employee, allEmployees, onEdit, onDelete, onAddSubordinate, onDrop, onMoveSelect, moveTargetId, level = 0 }) => {
            const [isDragOver, setIsDragOver] = useState(false);
            if (!employee) return null;

            const subordinates = allEmployees.filter(e => e.reportsTo === employee.id);
            const levelColors = ["border-blue-500 bg-blue-50", "border-indigo-500 bg-indigo-50", "border-green-500 bg-green-50", "border-gray-300 bg-white"];
            const cardColor = level < 3 ? levelColors[level] : levelColors[3];

            // Logic เมื่ออยู่ในโหมดย้าย (Move Mode) และคนนี้ถูกเลือก
            const isMoveTarget = moveTargetId === employee.id;

            const handleDragOver = (e) => { e.preventDefault(); setIsDragOver(true); };
            const handleDragLeave = () => { setIsDragOver(false); };
            const handleDropInternal = (e) => {
                e.preventDefault(); setIsDragOver(false);
                const draggedId = e.dataTransfer.getData("empId");
                if (draggedId && draggedId !== employee.id) onDrop(draggedId, employee.id);
            };

            return (
                <div className="flex flex-col items-center">
                    {level > 0 && <div className="h-4 sm:h-6 w-px bg-gray-300"></div>}

                    <div 
                        onDragOver={handleDragOver} onDragLeave={handleDragLeave} onDrop={handleDropInternal}
                        onClick={() => moveTargetId && onMoveSelect(employee.id)} // แตะเพื่อเลือกเป็นเป้าหมายย้าย
                        className={`relative z-10 group transition-all duration-200 ${isDragOver ? 'drop-target-hover scale-110' : ''} ${moveTargetId ? 'cursor-crosshair' : ''}`}
                    >
                        {/* Overlay เมื่ออยู่ในโหมดย้าย เพื่อบอกว่ากดที่นี่ได้ */}
                        {moveTargetId && (
                            <div className="absolute -inset-2 border-2 border-dashed border-blue-400 rounded-2xl bg-blue-50/50 z-20 flex items-center justify-center animate-pulse pointer-events-none">
                                <span className="bg-blue-600 text-white text-[10px] px-2 py-0.5 rounded-full">เลือกเป็นหัวหน้า</span>
                            </div>
                        )}

                        <EmployeeCard 
                            employee={employee} onClick={onEdit} 
                            onDragStart={(e, id) => e.dataTransfer.setData("empId", id)}
                            className={cardColor}
                        />

                        {!moveTargetId && (
                            <button
                                type="button"
                                onClick={(e) => { e.stopPropagation(); onAddSubordinate(employee.id); }}
                                className="add-btn absolute -bottom-3 left-1/2 transform -translate-x-1/2 bg-white text-blue-600 hover:bg-blue-600 hover:text-white border border-blue-200 rounded-full w-6 h-6 flex items-center justify-center shadow-md z-20 transition-all active:scale-95"
                            >
                                <Icons.Plus size={14} strokeWidth={3} />
                            </button>
                        )}
                    </div>

                    {subordinates.length > 0 && (
                        <>
                            <div className="h-4 sm:h-6 w-px bg-gray-300"></div>
                            <div className="flex relative">
                                {subordinates.length > 1 && <div className="absolute top-0 left-0 right-0 h-px bg-gray-300 mx-[calc(50%/2)] transform -translate-y-px"></div>}
                                <div className="flex gap-4 sm:gap-6 pt-0">
                                    {subordinates.map((sub, index) => (
                                        <div key={sub.id} className="relative flex flex-col items-center">
                                            {subordinates.length > 1 && (
                                                <div className={`absolute top-0 h-px bg-gray-300 ${index === 0 ? 'w-1/2 right-0' : ''} ${index === subordinates.length - 1 ? 'w-1/2 left-0' : ''} ${index > 0 && index < subordinates.length - 1 ? 'w-full' : ''}`}></div>
                                            )}
                                            <EmployeeNode 
                                                employee={sub} allEmployees={allEmployees} 
                                                onEdit={onEdit} onDelete={onDelete} onAddSubordinate={onAddSubordinate} onDrop={onDrop}
                                                onMoveSelect={onMoveSelect} moveTargetId={moveTargetId}
                                                level={level + 1}
                                            />
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </>
                    )}
                </div>
            );
        };

        const EmployeeForm = ({ employee, supervisors, positions, onSave, onCancel, onDelete, onAddPosition, onDeletePosition }) => {
            const [formData, setFormData] = useState({ id: '', name: '', position: positions[0] || '', reportsTo: '', image: null, status: 'Active' });
            const [showDeleteConfirm, setShowDeleteConfirm] = useState(false);
            const [isManagingPos, setIsManagingPos] = useState(false);
            const [newPosInput, setNewPosInput] = useState("");
            const fileInputRef = useRef(null);
            const isEditMode = employee && !employee.isNew;

            useEffect(() => {
                setShowDeleteConfirm(false); setIsManagingPos(false);
                if (isEditMode) setFormData(employee);
                else setFormData({ id: Math.floor(60000 + Math.random() * 9000).toString(), name: '', position: positions[0] || '', reportsTo: employee?.reportsTo || '', image: null, status: 'Active' });
            }, [employee, positions]);

            const handleChange = (e) => setFormData(prev => ({ ...prev, [e.target.name]: e.target.value }));
            const handleImageUpload = (e) => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onloadend = () => setFormData(prev => ({ ...prev, image: reader.result }));
                    reader.readAsDataURL(file);
                }
            };
            const handleSubmit = (e) => { e.preventDefault(); onSave(formData); };

            return (
                <div className="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center z-[60] p-4">
                    <div className="bg-white w-full max-w-md rounded-2xl shadow-2xl overflow-hidden flex flex-col max-h-[90vh]">
                        <div className="bg-gray-50 px-6 py-4 border-b border-gray-100 flex justify-between items-center shrink-0">
                            <h2 className="text-lg font-bold text-gray-800">{isEditMode ? 'แก้ไขข้อมูล' : 'เพิ่มพนักงาน'}</h2>
                            <button onClick={onCancel} className="text-gray-400 hover:text-gray-600"><Icons.X size={24} /></button>
                        </div>
                        <form onSubmit={handleSubmit} className="p-6 space-y-4 overflow-y-auto grow">
                            <div className="flex flex-col items-center mb-6">
                                <div className="w-24 h-24 rounded-full bg-gray-100 border-4 border-white shadow-md flex items-center justify-center overflow-hidden cursor-pointer relative group" onClick={() => fileInputRef.current.click()}>
                                    {formData.image ? <img src={formData.image} className="w-full h-full object-cover" /> : <Icons.Camera size={32} className="text-gray-400" />}
                                    <div className="absolute inset-0 bg-black/30 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"><span className="text-white text-xs">แตะเพื่อถ่ายรูป</span></div>
                                </div>
                                <input type="file" ref={fileInputRef} className="hidden" accept="image/*" capture="environment" onChange={handleImageUpload} />
                                <p className="text-xs text-gray-500 mt-2">แตะที่รูปเพื่อถ่ายภาพ</p>
                            </div>
                            <div className="grid grid-cols-2 gap-4">
                                <div><label className="block text-xs font-semibold text-gray-500 mb-1">รหัส</label><input type="text" name="id" required value={formData.id} onChange={handleChange} className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"/></div>
                                <div><label className="block text-xs font-semibold text-gray-500 mb-1">สถานะ</label><select name="status" value={formData.status} onChange={handleChange} className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"><option value="Active">ปกติ</option><option value="Resigned">ลาออก</option></select></div>
                            </div>
                            <div><label className="block text-xs font-semibold text-gray-500 mb-1">ชื่อ-นามสกุล</label><input type="text" name="name" required value={formData.name} onChange={handleChange} className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"/></div>
                            <div>
                                <div className="flex justify-between items-center mb-1"><label className="block text-xs font-semibold text-gray-500">ตำแหน่ง</label><button type="button" onClick={() => setIsManagingPos(!isManagingPos)} className="text-xs text-blue-600 flex items-center manage-pos-btn"><Icons.Settings size={12} className="mr-1"/>{isManagingPos ? "เสร็จ" : "แก้ไข"}</button></div>
                                {isManagingPos ? (
                                    <div className="p-3 bg-gray-50 rounded-lg border space-y-2"><div className="flex gap-2"><input type="text" value={newPosInput} onChange={(e) => setNewPosInput(e.target.value)} placeholder="ตำแหน่งใหม่..." className="flex-1 px-2 py-1.5 text-sm border rounded"/><button type="button" onClick={() => { if(newPosInput.trim()) { onAddPosition(newPosInput.trim()); setNewPosInput(""); } }} className="bg-blue-600 text-white px-2 py-1 rounded text-xs">เพิ่ม</button></div><div className="max-h-24 overflow-y-auto space-y-1">{positions.map(p => <div key={p} className="flex justify-between bg-white px-2 py-1 rounded border text-xs"><span>{p}</span><button type="button" onClick={() => onDeletePosition(p)} className="text-red-400"><Icons.X size={12} /></button></div>)}</div></div>
                                ) : (
                                    <select name="position" value={formData.position} onChange={handleChange} className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">{positions.map(p => <option key={p} value={p}>{p}</option>)}</select>
                                )}
                            </div>
                            <div><label className="block text-xs font-semibold text-gray-500 mb-1">หัวหน้างาน</label><select name="reportsTo" value={formData.reportsTo} onChange={handleChange} className="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"><option value="STAGING">-- รอจัดสายงาน --</option><option value="">-- ระดับสูงสุด --</option>{supervisors.filter(s => s.id !== formData.id).map(s => <option key={s.id} value={s.id}>{s.name}</option>)}</select></div>
                        </form>
                        <div className="bg-gray-50 px-6 py-4 border-t border-gray-100 flex justify-between items-center shrink-0">
                            <div>{isEditMode && (!showDeleteConfirm ? <Button variant="danger" onClick={() => setShowDeleteConfirm(true)} icon={Icons.Trash2}>ลบ</Button> : <div className="flex items-center gap-2"><span className="text-xs text-red-600 font-bold hidden sm:inline">ยืนยัน?</span><Button variant="danger" onClick={() => onDelete(formData.id)}>ลบ</Button><Button variant="secondary" onClick={() => setShowDeleteConfirm(false)}>ไม่</Button></div>)}</div>
                            {!showDeleteConfirm && <div className="flex gap-2 ml-auto"><Button variant="secondary" onClick={onCancel}>ยกเลิก</Button><Button variant="primary" onClick={handleSubmit} icon={Icons.Check}>บันทึก</Button></div>}
                        </div>
                    </div>
                </div>
            );
        };

        const App = () => {
            // Initial Data
            const initialData = [ { id: '68040', name: 'Detbodin K.', position: 'Assembly Supervisor', reportsTo: '', status: 'Active', image: null }, { id: '63009', name: 'Phakphum Y.', position: 'Leader Shift A', reportsTo: '68040', status: 'Active', image: null }, { id: '65024', name: 'Miss Thida C.', position: 'Assembly Operator', reportsTo: '63009', status: 'Active', image: null } ];
            const initialPositions = ["Department Manager", "Supervisor", "Engineer", "Leader", "Assembly Operator", "Clerk"];

            const [employees, setEmployees] = useState(() => JSON.parse(localStorage.getItem('orgData')) || initialData);
            const [positions, setPositions] = useState(() => JSON.parse(localStorage.getItem('orgPositions')) || initialPositions);
            
            // UI States
            const [isModalOpen, setIsModalOpen] = useState(false);
            const [editingEmployee, setEditingEmployee] = useState(null);
            const [viewMode, setViewMode] = useState('chart');
            const [isExporting, setIsExporting] = useState(false);
            const [isSidebarOpen, setIsSidebarOpen] = useState(false); // Mobile Sidebar Toggle
            
            // Move Mode State (สำหรับมือถือ Tap to Move)
            const [moveSource, setMoveSource] = useState(null);

            useEffect(() => { localStorage.setItem('orgData', JSON.stringify(employees)); }, [employees]);
            useEffect(() => { localStorage.setItem('orgPositions', JSON.stringify(positions)); }, [positions]);

            const handleSave = (data) => {
                setEmployees(prev => {
                    const exists = prev.find(e => e.id === data.id);
                    if (exists) return prev.map(e => e.id === data.id ? data : e);
                    return [...prev, data];
                });
                setIsModalOpen(false); setEditingEmployee(null);
            };

            const handleDelete = (id) => { setEmployees(prev => prev.filter(e => e.id !== id)); setIsModalOpen(false); };
            const handleDropOnChart = (draggedId, targetId) => { setEmployees(prev => prev.map(emp => emp.id === draggedId ? { ...emp, reportsTo: targetId } : emp)); };
            
            // Logic สำหรับ Tap to Move
            const handleMoveInit = (employee) => {
                setMoveSource(employee);
                setIsSidebarOpen(false); // ปิด Sidebar เพื่อให้เห็นผังง่ายๆ
            };
            const handleMoveCommit = (targetId) => {
                if (moveSource && moveSource.id !== targetId) {
                    handleDropOnChart(moveSource.id, targetId);
                    setMoveSource(null); // จบโหมดย้าย
                }
            };

            const handleAddPosition = (pos) => { if (!positions.includes(pos)) setPositions([...positions, pos]); };
            const handleDeletePosition = (pos) => { setPositions(positions.filter(p => p !== pos)); };

            const handleDownloadPDF = async () => {
                setIsExporting(true);
                await new Promise(r => setTimeout(r, 100));
                const element = document.getElementById('org-chart-full-view');
                if (!element) return setIsExporting(false);
                try {
                    const canvas = await html2canvas(element, { scale: 2, useCORS: true, backgroundColor: '#ffffff' });
                    const pdf = new jsPDF('l', 'mm', 'a4');
                    const pdfW = pdf.internal.pageSize.getWidth();
                    const pdfH = pdf.internal.pageSize.getHeight();
                    const imgProps = pdf.getImageProperties(canvas.toDataURL('image/jpeg'));
                    const ratio = imgProps.width / imgProps.height;
                    let w = pdfW - 20, h = w / ratio;
                    if (h > pdfH - 20) { h = pdfH - 20; w = h * ratio; }
                    pdf.addImage(imgProps.data, 'JPEG', (pdfW - w) / 2, (pdfH - h) / 2, w, h);
                    pdf.save('org-chart.pdf');
                } catch (e) { alert("Error PDF"); } finally { setIsExporting(false); }
            };

            const stagingEmployees = employees.filter(e => e.reportsTo === 'STAGING');
            const rootEmployees = employees.filter(e => (!e.reportsTo || e.reportsTo === '') && e.reportsTo !== 'STAGING');

            return (
                <div className="flex flex-col h-full bg-gray-50">
                    {/* Header */}
                    <nav className="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40 shrink-0">
                        <div className="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
                            <div className="flex justify-between h-14 items-center">
                                <div className="flex items-center gap-2">
                                    {/* Mobile: Toggle Sidebar */}
                                    <button onClick={() => setIsSidebarOpen(!isSidebarOpen)} className="md:hidden p-2 text-gray-600 rounded-lg hover:bg-gray-100">
                                        <Icons.Menu size={20} />
                                    </button>
                                    <div className="bg-red-600 p-1 rounded text-white font-bold text-sm sm:text-xl">HR</div>
                                    <h1 className="text-sm sm:text-lg font-bold text-gray-800 hidden sm:block">Assembly Dept</h1>
                                </div>
                                
                                <div className="flex items-center gap-1 sm:gap-2">
                                    {/* View Toggles */}
                                    <div className="flex bg-gray-100 rounded-lg p-0.5 sm:p-1 mr-1 sm:mr-2">
                                        <button onClick={() => setViewMode('chart')} className={`p-1.5 sm:px-3 sm:py-1.5 rounded-md transition-all ${viewMode === 'chart' ? 'bg-white shadow text-blue-600' : 'text-gray-400'}`}>
                                            <Icons.Grid size={18} className="sm:hidden" /><span className="hidden sm:inline text-sm font-medium">Chart</span>
                                        </button>
                                        <button onClick={() => setViewMode('list')} className={`p-1.5 sm:px-3 sm:py-1.5 rounded-md transition-all ${viewMode === 'list' ? 'bg-white shadow text-blue-600' : 'text-gray-400'}`}>
                                            <Icons.List size={18} className="sm:hidden" /><span className="hidden sm:inline text-sm font-medium">List</span>
                                        </button>
                                    </div>

                                    {/* Actions */}
                                    <button onClick={() => { const link = document.createElement("a"); link.href = `data:text/csv;charset=utf-8,${encodeURI(["ID,Name,Position,ReportsTo,Status"].join(",") + "\n" + employees.map(e => `${e.id},${e.name},${e.position},${e.reportsTo},${e.status}`).join("\n"))}`; link.download="data.csv"; link.click(); }} className="p-2 text-green-600 hover:bg-green-50 rounded-full hidden sm:block"><Icons.FileSpreadsheet size={20}/></button>
                                    <button onClick={handleDownloadPDF} disabled={isExporting} className="p-2 text-gray-600 hover:bg-gray-100 rounded-full disabled:opacity-50"><Icons.Download size={20}/></button>
                                    <Button onClick={() => { setEditingEmployee({ isNew: true, reportsTo: 'STAGING' }); setIsModalOpen(true); }} variant="primary" icon={Icons.Plus}><span className="hidden sm:inline">เพิ่ม</span></Button>
                                </div>
                            </div>
                        </div>
                    </nav>

                    {/* Move Mode Alert Banner (Mobile) */}
                    {moveSource && (
                        <div className="bg-blue-600 text-white p-2 text-center text-sm sticky top-14 z-50 shadow-md animate-bounce">
                            กำลังย้าย: <b>{moveSource.name}</b> <br/> <span className="text-xs opacity-80">แตะที่รูปหัวหน้าในผังเพื่อวาง</span>
                            <button onClick={() => setMoveSource(null)} className="ml-4 underline text-xs">ยกเลิก</button>
                        </div>
                    )}

                    <div className="flex flex-1 overflow-hidden relative">
                        {/* Sidebar (Staging) - Responsive Drawer */}
                        {viewMode === 'chart' && (
                            <>
                                {/* Backdrop for mobile */}
                                {isSidebarOpen && <div className="fixed inset-0 bg-black/50 z-30 md:hidden sidebar-overlay" onClick={() => setIsSidebarOpen(false)}></div>}
                                
                                <aside className={`
                                    fixed inset-y-0 left-0 z-40 w-64 bg-white border-r border-gray-200 p-4 overflow-y-auto transform transition-transform duration-300 ease-in-out shadow-xl md:shadow-none
                                    md:relative md:translate-x-0 pt-20 md:pt-4
                                    ${isSidebarOpen ? 'translate-x-0' : '-translate-x-full'}
                                `}>
                                    <div className="flex justify-between items-center mb-4">
                                        <h2 className="text-sm font-bold text-gray-600 uppercase">รอจัดสายงาน ({stagingEmployees.length})</h2>
                                        <button onClick={() => { setEditingEmployee({ isNew: true, reportsTo: 'STAGING' }); setIsModalOpen(true); }} className="text-blue-600 hover:bg-blue-50 p-1 rounded"><Icons.Plus size={18}/></button>
                                    </div>
                                    <div className="space-y-3 pb-20 md:pb-0">
                                        {stagingEmployees.length > 0 ? (
                                            stagingEmployees.map(emp => (
                                                <EmployeeCard 
                                                    key={emp.id} employee={emp} 
                                                    onClick={(e) => { setEditingEmployee({...e, isNew:false}); setIsModalOpen(true); }}
                                                    onDragStart={(e, id) => e.dataTransfer.setData("empId", id)}
                                                    onMoveInit={handleMoveInit}
                                                    className="w-full border-l-4 border-gray-400"
                                                    isStaging={true}
                                                    isSelected={moveSource?.id === emp.id}
                                                />
                                            ))
                                        ) : (
                                            <div className="text-center py-8 text-gray-400 border-2 border-dashed rounded-lg"><p className="text-xs">ว่างเปล่า</p></div>
                                        )}
                                    </div>
                                    <button onClick={() => setIsSidebarOpen(false)} className="md:hidden absolute top-4 right-4 text-gray-400"><Icons.X size={24}/></button>
                                </aside>
                            </>
                        )}

                        {/* Main Content */}
                        <main className="flex-1 bg-gray-100 p-2 sm:p-8 overflow-auto relative touch-pan-x touch-pan-y">
                            {viewMode === 'chart' ? (
                                <div className="min-h-full flex flex-col items-center">
                                    <div id="org-chart-full-view" className="bg-white p-4 sm:p-8 rounded-2xl border border-gray-200 shadow-sm inline-block min-w-max scale-90 sm:scale-100 origin-top">
                                        <div className="text-center mb-6 border-b-2 border-red-600 pb-2">
                                            <h1 className="text-xl sm:text-3xl font-bold text-gray-800 uppercase">Assembly Dept</h1>
                                            <p className="text-gray-500 text-[10px] sm:text-sm">Updated: {new Date().toLocaleDateString('th-TH')}</p>
                                        </div>
                                        <div className="flex gap-8 sm:gap-16 justify-center">
                                            {rootEmployees.length > 0 ? (
                                                rootEmployees.map(root => (
                                                    <EmployeeNode 
                                                        key={root.id} employee={root} allEmployees={employees}
                                                        onEdit={(e) => { setEditingEmployee({...e, isNew:false}); setIsModalOpen(true); }}
                                                        onDelete={handleDelete}
                                                        onAddSubordinate={(supId) => { setEditingEmployee({ isNew: true, reportsTo: supId }); setIsModalOpen(true); }}
                                                        onDrop={handleDropOnChart}
                                                        onMoveSelect={handleMoveCommit}
                                                        moveTargetId={moveSource ? moveSource.id : null}
                                                    />
                                                ))
                                            ) : (
                                                <div className="text-center py-20 text-gray-400"><p>ยังไม่มีหัวหน้างานในผัง</p></div>
                                            )}
                                        </div>
                                    </div>
                                    <div className="h-20 sm:hidden"></div> {/* Spacer for scrolling on mobile */}
                                </div>
                            ) : (
                                <div className="bg-white rounded-xl shadow-sm border overflow-hidden">
                                    <table className="min-w-full divide-y divide-gray-200">
                                        <thead className="bg-gray-50"><tr><th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Employee</th><th className="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell">Position</th><th className="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Action</th></tr></thead>
                                        <tbody className="bg-white divide-y divide-gray-200">{employees.map(emp => (
                                            <tr key={emp.id}>
                                                <td className="px-4 py-3 flex items-center gap-3"><img className="h-8 w-8 rounded-full bg-gray-200" src={emp.image || "https://via.placeholder.com/100"} /><div><div className="text-sm font-medium">{emp.name}</div><div className="text-xs text-gray-500 sm:hidden">{emp.position}</div></div></td>
                                                <td className="px-4 py-3 text-sm text-gray-500 hidden sm:table-cell">{emp.position}</td>
                                                <td className="px-4 py-3 text-right"><button onClick={() => { setEditingEmployee({...emp, isNew:false}); setIsModalOpen(true); }} className="text-blue-600 text-sm">Edit</button></td>
                                            </tr>
                                        ))}</tbody>
                                    </table>
                                </div>
                            )}
                        </main>
                    </div>

                    {isModalOpen && <EmployeeForm employee={editingEmployee} supervisors={employees} positions={positions} onSave={handleSave} onCancel={() => setIsModalOpen(false)} onDelete={handleDelete} onAddPosition={handleAddPosition} onDeletePosition={handleDeletePosition} />}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
