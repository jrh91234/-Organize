        .selection-mode-active { animation: pulse-border 2s infinite; border-color: #2563eb !important; background-color: #eff6ff; }
        @keyframes pulse-border {
            0% { box-shadow: 0 0 0 0 rgba(37, 99, 235, 0.4); }
